<Window x:Class="CS_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_App"
        mc:Ignorable="d"
        Title="Security Benchmark" Height="700" Width="1000">

     <Grid>
          <DockPanel>
               <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File" FontSize="14">
                         <MenuItem Header="_New" Click="ImportPolicy" />
                         <MenuItem Header="_Open" Click="OpenJsonAudits" />
                         <MenuItem Header="_Save" Click ="SaveAudits"/>
                         <Separator />
                         <MenuItem Header="_Exit" />
                    </MenuItem>
               </Menu>
               <TextBox AcceptsReturn="True" Visibility="Hidden"/>
          </DockPanel>
          <TextBlock x:Name="auditsCount" Text="Total Audits: 0" TextWrapping="Wrap" Margin="10,38,579,604" FontSize="16" Panel.ZIndex="1" FontWeight="Bold"/>
          <ListView x:Name="auditsList" Margin="10,85,10,10">
          </ListView>
     </Grid>
</Window>
